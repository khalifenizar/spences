<div data-hook="validity-class" class="form-group">
    <label data-hook="label" class="control-label {{ sizeClassLabel }}"></label>
    <div data-hook="message-container">
        <div class="alert alert-danger" data-hook="message-text"></div>
    </div>

    {{#if isTextArea }}
        <textarea class="form-control {{ sizeClassInput }}" rows="{{ sizeRows }}"></textarea>
    {{#else }}
        <input class="form-control {{ sizeClassInput }}">
    {{/if}}
</div>
